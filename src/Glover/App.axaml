<Application x:Class="Glover.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:p1="clr-namespace:Material.Styles.Assists;assembly=Material.Styles">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Themes/Button.xaml" />
                <ResourceInclude Source="Themes/ComboBox.xaml" />
                <ResourceInclude Source="Themes/NotificationCard.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <themes:MaterialTheme BaseTheme="Dark" PrimaryColor="BlueGrey" SecondaryColor="Teal" />
        <avalonia:MaterialIconStyles />
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="system-ui, -apple-system, 'Segoe UI', Roboto"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Application.Styles>
</Application>
